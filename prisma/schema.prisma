generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String   @unique
  title     String
  fileId    String
  createdAt DateTime @default(now())
}

model User {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  tgId    String  @unique
  isAdmin Boolean @default(false)
}
